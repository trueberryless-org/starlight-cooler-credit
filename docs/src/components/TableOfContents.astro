---
import Default from '@astrojs/starlight/components/TableOfContents.astro'
import BottomTableOfContentsWrapper from 'starlight-cooler-credit/components/BottomTableOfContentsWrapper.astro'
import TopTableOfContentsWrapper from 'starlight-cooler-credit/components/TopTableOfContentsWrapper.astro'
import DefaultBottomTableOfContentsWrapper from 'starlight-cooler-credit/components/DefaultBottomTableOfContentsWrapper.astro'

const currentPath = Astro.url.pathname;
const showBothTable = currentPath.includes('top-and-bottom-table-of-contents-wrapper');
const showBottomTable = currentPath.includes('bottom-table-of-contents-wrapper');
const showTopTable = currentPath.includes('top-table-of-contents-wrapper');
---

{showBothTable ? (
  <TopTableOfContentsWrapper>
    <p>✨ Reaching for the stars! ✨</p>
  </TopTableOfContentsWrapper>
  <Default><slot /></Default>
  <BottomTableOfContentsWrapper>
    <p>Hello, Astronaut! 👨‍🚀</p>
  </BottomTableOfContentsWrapper>
) : showBottomTable ? (
  <Default><slot /></Default>
  <BottomTableOfContentsWrapper>
    <p>Hello, Astronaut! 👨‍🚀</p>
  </BottomTableOfContentsWrapper>
) : showTopTable ? (
  <TopTableOfContentsWrapper>
    <p>✨ Reaching for the stars! ✨</p>
  </TopTableOfContentsWrapper>
  <Default><slot /></Default>
) : (
  <Default><slot /></Default>
  <DefaultBottomTableOfContentsWrapper />
)}
